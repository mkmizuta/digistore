<h1>
  {{ name }} 
  <small class='muted'>${{ format-price price }}</small> 
</h1>

<div class='row'>
  <div class='col-lg-8'>
    <img {{ bind-attr src=image }} class='thumbnail col-lg-12' />
  </div>
  <div class='col-lg-4'>
    {{ name }}<br>
    ${{ format-price price }} each<br>
    {{ description }}<br>
    <button a href="#" {{ action "addToCart" this }}>Add To Cart!</a>
  </div>
</div>
